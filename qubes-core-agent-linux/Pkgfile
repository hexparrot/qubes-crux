# Description: Qubes component: qubes-core-agent-linux
# URL: https://qubes-os.org
# Maintainer: William Dizon, wdchromium at gmail dot com 
# Depends on: pandoc

name=qubes-core-agent-linux
version=4.1.26
release=1
source=(https://github.com/QubesOS/qubes-core-agent-linux/archive/refs/tags/v${version}.tar.gz)

build() {
	cd $name-$version
	export BACKEND_VMM=xen

	make DESTDIR=$PKG all
	make DESTDIR=$PKG install-vm
	make DESTDIR=$PKG -C qubes-rpc all
	make DESTDIR=$PKG -C qubes-rpc install
}
